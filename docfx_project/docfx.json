{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "Assets/EasyCodeForVivox/**/*.cs",
            "Assets/EasyCodeForVivox/**/**/*.cs",
            "Assets/EasyCodeForVivox/**/**/**/*.cs",
            "Assets/EasyCodeForVivox/**/**/**/**/*.cs",
            "Assets/EasyCodeForVivox/**/**/**/**/**/*.cs"
          ],
          "exclude": [
            "Assets/EasyCodeForVivox/Plugins/**",
            "Assets/EasyCodeForVivox/Examples/**"
          ]
        }
      ],
      "dest": "API Docs",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "EasyCodeForVivox Documentation",
      "_appFooter": "EasyCodeForVivox Documentation",
      "_appFaviconPath": "/images/Full Stack Indie Logo.ico",
      "_appLogoPath":"/images/fsi.webp",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "content": [
      {
        "files": [
          "API Docs/**/*.md",
          "API Docs/index.md",
          "API Docs/toc.yml",
          "toc.yml",
          "*.md"
        ]
      },
      {
        "files": [
          "Documentation/*.md",
          "Documentation/**/*.md",
          "Documentation/toc.yml",
          "Documentation/**/toc.yml",
          "Getting Started/*.md",
          "Getting Started/**/*.md",
          "Getting Started/toc.yml",
          "Getting Started/**/toc.yml",
          "Release Notes/*.md",
          "Release Notes/**/*.md",
          "Release Notes/toc.yml",
          "Release Notes/**/toc.yml"
        ],
        "exclude": [
          "Getting Started/includes/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "sitemap": {
      "baseUrl": "https://docs.fullstackindie.net/EasyCodeForVivox",
      "changefreq": "weekly",
      "fileOptions": {
        "api/*": {
          "changefreq": "daily",
          "priority": 0.3
        },
        "main/*": {
          "changefreq": "weekly",
          "priority": 0.7
        },
        "docs/*": {
          "changefreq": "daily",
          "priority": 0.5
        }
      }
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/unity"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  },
  "pdf": {
    "name": "EasyCode_2.2",
    "keepRawFiles": false,
    "coverTitle": "EasyCodeForVivox",
    "excludeDefaultToc": false,
    "content": [
      {
        "files": [
          "**/*.{md,yml}",
          "**/**/*.{md,yml}",
          "**/**/**/*.{md,yml}",
          "**/**/**/**/*.{md,yml}"
        ],
        "exclude": [
          "Getting Started/includes/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "wkhtmltopdf": {
      "filePath": "C:/Program Files/wkhtmltopdf/bin/wkhtmltopdf.exe",
      "additionalArguments": "--enable-local-file-access"
    },
    "dest": "../Assets/EasyCodeForVivox/Documentation"
  }
}